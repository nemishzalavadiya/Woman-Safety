    android:gravity="center"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <!--for backgroud i have an image-->

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="90dp"
